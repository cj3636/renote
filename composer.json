{
  "config": {
    "platform": {
      "php": "8.3.7"
    }
  },
  "name": "cj3636/renote",
  "authors": [
    {
      "name": "cj3636",
      "email": "cj3636@tyss.dev"
    }
  ],
  "type": "project",
  "require": {
    "php": "^8.0",
    "predis/predis": "^2.3",
    "vlucas/phpdotenv": "^5.6",
    "ext-pdo": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.64",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Renote\\": "src/",
      "": "."
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "analyse": "phpstan analyse --memory-limit=512M",
    "lint": "php -l index.php api.php bootstrap.php flush.php || true",
    "format": "php-cs-fixer fix --using-cache=no --verbose",
    "cs": "phpcs --standard=PSR12 -q --colors ."
  }
}